{
  "name": "playwright-cli",
  "version": "0.5.2",
  "description": "Playwright CLI",
  "repository": "github:Microsoft/playwright-cli",
  "homepage": "https://playwright.dev",
  "scripts": {
    "test": "test-runner test/",
    "build": "node utils/runWebpack.js --mode='development' && tsc -p .",
    "watch": "node utils/runWebpack.js --mode='development' --watch --silent | npm run watch-web-files |  tsc -w -p .",
    "copy-web-files": "copyfiles -u 2 \"src/traceViewer/web/**/*.css\" \"src/traceViewer/web/*.html\" \"src/traceViewer/web/*.ttf\"  out",
    "watch-web-files": "npm run copy-web-files && chokidar \"src/traceViewer/web/**/*.css\" \"src/traceViewer/web/**/*.html\" -c \"npm run copy-web-files\""
  },
  "bin": {
    "playwright-cli": "./index.js"
  },
  "author": {
    "name": "Microsoft Corporation"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "commander": "^6.1.0",
    "highlight.js": "^10.1.2",
    "playwright": "1.4.0-next.1599892520007"
  },
  "devDependencies": {
    "@playwright/test-runner": "^0.3.7",
    "chokidar-cli": "^2.1.0",
    "copyfiles": "^2.3.0",
    "ts-loader": "^8.0.3",
    "typescript": "^4.0.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  }
}
